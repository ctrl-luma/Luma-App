{
  "name": "luma-app",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "dev": "expo start --port 3336",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web --port 3336",
    "build:dev": "eas build --profile dev --platform android",
    "build:dev:ios": "eas build --profile dev --platform ios --auto-submit",
    "build:prod": "eas build --profile prod --platform ios",
    "submit:ios": "eas submit --platform ios",
    "sim": "npx expo start",
    "postinstall": "npx patch-package"
  },
  "dependencies": {
    "@expo-google-fonts/inter": "^0.4.2",
